{
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "eslint": "^6.7.2",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "scripts": {
    "serve": "webpack-dev-server --mode development",
    "build": "rimraf dist && webpack --mode development",
    "build:prod": "rimraf dist && webpack --mode production",
    "lint": "eslint **/*.js",
    "format": "prettier **/*.{js,html,json,ts} --write"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
